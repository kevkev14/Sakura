---
import styles from "../styles/styles.css";
const { eventName, stage, time, group, link, billede } = Astro.props;
---

  <article>
    
    <div class="container">
      <img class="image" src={billede} alt="" />
      <h2>{eventName}</h2>
      <p class="text">{stage}</p>
      <p class="text">{time}</p>
      <p class="text">{group}</p>
    </div>
    <a class="selectProgram" href={link}><span>Read More</span> </a>
  </article>


<style>
  @import url("https://fonts.googleapis.com/css2?family=Eagle+Lake&display=swap");
  article {
    justify-content: center;
    background-color: #f0e9eb;
    
  }

  div {
    text-align: center;
    justify-content: center;
  }

  img {
    width: 100%;
  }

  .selectProgram span{
    display: flex;
    text-align: center;
    justify-content: center;
    text-decoration: none;
  }

  a{
    text-decoration: none;
  }
  
  a:visited{
    text-decoration: none;
  }

  p,
  h2,
  span {
    font-family: "Calibri", cursive;
    text-align: center;
    color: #534741;
  }

  span {
    color: white;
    font-size: large;
    background-color: #bf4565;
    padding: 1rem;
  }
  body {
    width: 80%;
    margin: auto;
  }
</style>
